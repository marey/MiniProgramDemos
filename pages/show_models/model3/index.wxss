/**index.wxss**/

/* 外面的按钮 */

.btn {
      width: 80px;
      height: 35px;
      background: #44b549;
      line-height: 35px;
      text-align: center;
      color: #fff;
      font-size: 15px;
      margin: 20px auto;
      border-radius: 100px;
}

/* 遮罩层 */
.modal-dlg{
  position: absolute;
  top:0;
  bottom: 0;
  left:0;
  right:0;
  background-color:rgba(0,0,0,0.5); 
}
.close-dlg{
  float:right;
  margin-top:20rpx;
  margin-right:20rpx;
  color:#3A5FCD;
  font-size:35rpx;
}
.close-dlg .close-icon{
  display: inline-block;
  font-size: 45rpx;
}
.bg-dlg{
  display: inline-block;
  position: relative;
  margin-top:35%;
  width:650rpx;
  margin-left:50rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.content-dlg{
  padding:30rpx;
}
.content-dlg .world{
  margin-bottom: 20rpx;
}
.content-dlg .translate{
  display: inline-block;
  width:100%;
  font-size:35rpx;
  margin-bottom: 40rpx;
  max-height:450rpx;
  min-height:250rpx;
  overflow: auto;
}


.copy-dlg{
  position: absolute;
  bottom: 20rpx;
  right:20rpx;
  font-size:35rpx;
}
.copy-dlg::before{
  display: inline-block;
  content:'';
  width:35rpx;
  height:35rpx;
  background-size: 100% 100%;
  background-image: url(data:image/gif;base64,)
}